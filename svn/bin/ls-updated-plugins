#!/bin/bash

. $(dirname $0)/prelude.bash

date=$1
[[ -n $date ]] || die "usage: $0 <date>"

ymd=$(php -r "echo date('Y-m-d', strtotime('$date'));")
tmp=${TMPDIR:-/tmp}

checkout=$(mktemp -d $tmp/plugins-svn.XXXXXXXX)
trap "rm -rf $checkout" EXIT

RUN cd $checkout
RUN svn co https://plugins.svn.wordpress.org --depth empty > /dev/null
RUN $base/bin/svn-changed-slugs $ymd
