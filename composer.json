{
    "require": {
        "php": "^8.3",
        "ext-simplexml": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "guzzlehttp/guzzle": "^7.9",
        "symfony/console": "^7.1",
        "symfony/process": "^7.1",
        "laminas/laminas-servicemanager": "^4.2",
        "laminas/laminas-config-aggregator": "^1.15",
        "laminas/laminas-coding-standard": "^2.5",
        "aura/sql": "^5.0",
        "ramsey/uuid": "^4.7",
        "league/flysystem": "^3.29",
        "league/flysystem-aws-s3-v3": "^3.0",
        "thecodingmachine/safe": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "AspirePress\\AspireSync\\": "./src"
        }
    },
    "autoload-dev":{
        "psr-4": {
            "AspirePress\\AspireSync\\Tests\\Unit\\": "./tests/unit",
            "AspirePress\\AspireSync\\Tests\\Functional\\": "./tests/functional",
            "AspirePress\\AspireSync\\Tests\\Helpers\\": "./tests/helpers"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "phpstan/phpstan": "^1.12",
        "thecodingmachine/phpstan-safe-rule": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
